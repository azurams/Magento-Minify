<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <dev>
            <groups>
                <minify>
                    <label>Minification Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_yuicompressor translate="label">
                            <label>Enable YUICompress</label>
                            <comment>this allows better minifications results. (requires Java)</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_yuicompressor>
                        <js_files translate="label">
                            <label>Minify JavaScript Merged Files</label>
                            <comment>Minification is performed only on merged files</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </js_files>
                        <css_files translate="label">
                            <label>Minify CSS Merged Files</label>
                            <comment>Minification is performed only on merged files</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </css_files>
                        <lessjs translate="label">
                            <label>Include less.js</label>
                            <comment><![CDATA[When <strong style="color:red;">merging</strong>
                                isn't enabled, .less files wont be compiled to css and less.js is
                                required for proper rendering.<br />
                                When enable merging, please disable this.
                            ]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lessjs>
                    </fields>
                </minify>
            </groups>
        </dev>
    </sections>
</config>